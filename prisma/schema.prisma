generator client {
  provider = "prisma-client-js"
}

datasource kontemplados_db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Carta {
  id            String   @id @default(cuid())
  idCarta       String   @unique
  tipo          String   // "Imovel" ou "Veiculo"
  administradora String
  valorCredito  Float    // Valor total do crédito
  valorEntrada  Float    // Valor da entrada
  parcelas      Int      // Número de parcelas
  valorParcela  Float    // Valor de cada parcela
  vencimento    DateTime // Data de vencimento da primeira parcela
  comissao      Float    // Percentual de comissão sobre a venda
  status        String   @default("Ativa")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("cartas")
}